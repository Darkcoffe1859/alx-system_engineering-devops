#!/usr/bin/env bash

# Stop Nginx with sudo
sudo service nginx stop

# Edit the Nginx configuration to run as nginx user and listen on port 8080
sudo sed -i 's/user www-data;/user nginx;/g' /etc/nginx/nginx.conf
sudo sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default

# Start Nginx with sudo
sudo service nginx start

# Verify that Nginx is running as nginx user and listening on port 8080
ps aux | grep nginx

